{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:recommended"
    ],
    "stabilityDays": 0,
    "hostRules": [],
    "ignoreDeps": [
      "github.com/BillSchenk/terraform-modules"
    ],
    "regexManagers": [
      {
        "fileMatch": [
          "(^|\/)*\\.tf$",
          "(^|/)terragrunt\\.hcl$"
        ],
        "matchStrings": [
          "source\\s*=\\s*\"git@github\\.com\\:(?<depName>BillSchenk\\/terraform-modules)\\.git\\?ref=(?<pathPrefix>.*)\\/(?<currentValue>v\\d+\\.\\d+\\.\\d+)\""
        ],
        "datasourceTemplate": "github-tags",
        "versioningTemplate": "regex:^v(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$",
        "extractVersionTemplate": "^{{{pathPrefix}}}/(?<version>v.+)$",
        "depNameTemplate": "{{{pathPrefix}}}",
        "packageNameTemplate": "{{{depName}}}"
      }
    ],
    "packageRules": [
      {
        "matchPackageNames": [
          "hashicorp/terraform",
          "terraform",
          "gruntwork-io/terragrunt",
          "terragrunt"
        ],
        "enabled": false
      },
      {
        "matchManagers": ["regex"],
        "matchPackageNames": ["BillSchenk/terraform-modules"],
        "ignoreDeprecated": false
      }
    ]
  }
  